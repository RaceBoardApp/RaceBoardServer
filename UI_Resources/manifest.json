{
  "version": "1.0.0",
  "server": {
    "binary": "bin/raceboard-server",
    "config_template": "configs/server_config_template.toml",
    "default_ports": {
      "http": 7777,
      "grpc": 50051
    },
    "health_endpoint": "/health",
    "required_env": [
      "RACEBOARD_SERVER__HTTP_PORT",
      "RACEBOARD_SERVER__GRPC_PORT",
      "RACEBOARD_PERSISTENCE__PATH",
      "RACEBOARD_LOGGING__LEVEL"
    ]
  },
  "adapters": [
    {
      "id": "gitlab",
      "name": "GitLab CI",
      "binary": "bin/raceboard-gitlab",
      "config_template": "configs/gitlab_config_template.toml",
      "requires_auth": true,
      "auth_type": "token",
      "required_fields": ["host", "token"],
      "cli_flags": ["--config", "--server"],
      "description": "Track GitLab CI/CD pipelines"
    },
    {
      "id": "calendar",
      "name": "Google Calendar",
      "binary": "bin/raceboard-calendar",
      "config_template": "configs/calendar_config_template.toml",
      "requires_auth": true,
      "auth_type": "oauth",
      "required_fields": ["client_id", "client_secret"],
      "cli_flags": ["--config", "--server"],
      "description": "Track calendar events as races"
    },
    {
      "id": "codex",
      "name": "Codex Log Watcher",
      "binary": "bin/raceboard-codex-watch",
      "requires_auth": false,
      "auth_type": "none",
      "required_fields": ["watch_paths"],
      "cli_flags": ["--watch", "--server"],
      "description": "Monitor AI coding sessions from log files"
    },
    {
      "id": "claude",
      "name": "Claude Adapter",
      "binary": "bin/raceboard-claude",
      "requires_auth": false,
      "auth_type": "none",
      "cli_flags": ["--server"],
      "description": "Track Claude AI interactions"
    },
    {
      "id": "gemini",
      "name": "Gemini Watcher",
      "binary": "bin/raceboard-gemini-watch",
      "requires_auth": false,
      "auth_type": "none",
      "required_fields": ["watch_paths"],
      "cli_flags": ["--watch", "--server"],
      "description": "Monitor Gemini AI sessions"
    }
  ],
  "scripts": {
    "check_ports": "scripts/check_ports.sh",
    "health_check": "scripts/health_check.sh"
  },
  "app_group_structure": {
    "directories": [
      "configs",
      "logs",
      "bookmarks"
    ],
    "files": {
      "server_config": "config.toml",
      "database": "eta_history.db"
    }
  },
  "entitlements": {
    "main_app": [
      "com.apple.security.app-sandbox",
      "com.apple.security.network.client",
      "com.apple.security.application-groups.container-access",
      "com.apple.security.keychain-access-groups"
    ],
    "login_helper": [
      "com.apple.security.app-sandbox",
      "com.apple.security.network.client",
      "com.apple.security.network.server",
      "com.apple.security.application-groups.container-access",
      "com.apple.security.keychain-access-groups",
      "com.apple.security.files.user-selected.read-only"
    ]
  }
}